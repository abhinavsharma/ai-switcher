{
  "manifest_version": 3,
  "name": "AI Chat Replicator",
  "version": "1.0",
  "description": "Replicate your conversations across multiple AI chat applications",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://grok.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}