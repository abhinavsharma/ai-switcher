{
  "manifest_version": 3,
  "name": "AI Switcher",
  "version": "1.0",
  "description": "Replicate your conversations across multiple AI chat applications",
  "permissions": ["clipboardWrite"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}